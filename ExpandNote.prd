  note_id UUID REFERENCES notes(id) ON DELETE CASCADE,
  ai_provider TEXT NOT NULL,
  model TEXT NOT NULL,
  tokens_used INTEGER,
  execution_time_ms INTEGER,
  status TEXT NOT NULL CHECK (status IN ('success', 'failed')),
